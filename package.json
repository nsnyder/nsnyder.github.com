{
  "name": "nsnyder.github.com",
  "version": "0.1.0",
  "private": true,
  "sideEffects": [
    "*.css",
    "*.vue"
  ],
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "autocomplete": "npx tailwind build src/styles/main.css -o .util/output.css",
    "github-deploy": "node scripts/github-deploy.js",
    "vue-ui": "vue ui"
  },
  "dependencies": {
    "@vue/composition-api": "^0.5.0",
    "core-js": "^3.6.5",
    "tailwindcss": "^1.4.6",
    "vue": "^2.6.11"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.3.0",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "@vue/cli-plugin-babel": "^4.4.6",
    "@vue/cli-plugin-eslint": "^4.4.6",
    "@vue/cli-plugin-typescript": "^4.4.6",
    "@vue/cli-service": "~4.2.0",
    "@vue/eslint-config-typescript": "^5.0.1",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-vue": "^6.2.2",
    "execa": "^4.0.2",
    "lint-staged": "^10.2.11",
    "postcss": "^7.0.32",
    "prettier": "^1.19.1",
    "stylelint": "^13.6.1",
    "stylelint-config-standard": "^20.0.0",
    "typescript": "~3.8.3",
    "vti": "0.0.3",
    "vue-template-compiler": "^2.6.11"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "gitHooks": {
    "post-checkout": ".githooks/post-checkout.sh",
    "pre-commit": "vti diagnostics && lint-staged"
  },
  "lint-staged": {
    "src/**/*.{js,ts,vue}": [
      "eslint --cache --fix"
    ],
    "src/**/*.{js,css,md}": [
      "stylelint --fix"
    ]
  },
  "prettier": {
    "vueIndentScriptAndStyle": true,
    "trailingComma": "es5"
  }
}
